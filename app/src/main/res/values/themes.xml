<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TLULearningOnline" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="ProfileButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_forward</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:iconTint">@color/blue</item>
    </style>

    <style name="LogoutButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="backgroundTint">@color/blue</item> <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">16dp</item> <item name="cornerRadius">100dp</item> <item name="android:textAllCaps">true</item> </style>

    <style name="Theme.TLULearningOnline" parent="Base.Theme.TLULearningOnline" />
</resources>