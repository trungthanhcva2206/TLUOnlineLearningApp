<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp">

    <!-- Mã sinh viên -->
    <TextView
        android:id="@+id/tvMsv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="001"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Họ tên -->
    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pham Nhat Anh"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tvMsv"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/tvMsv" />

    <!-- Vai trò -->
    <TextView
        android:id="@+id/tvRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SV"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tvFullName"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/tvMsv" />

    <!-- Lớp -->
    <TextView
        android:id="@+id/tvClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="64CNTT.NB"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tvRole"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/tvMsv" />

    <!-- Link Chi tiết -->
    <TextView
        android:id="@+id/tvChiTiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chi tiết"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="14sp"
        android:textStyle="italic"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvMsv" />

</androidx.constraintlayout.widget.ConstraintLayout>
