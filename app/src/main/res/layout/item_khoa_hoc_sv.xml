<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="345dp"
    android:layout_height="220dp"
    android:layout_marginBottom="12dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="24dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <TextView
            android:id="@+id/txt_ten_khoa_hoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phát triển ứng dụng trên thiết bị di động"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_save"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/btn_save"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_border"
            android:contentDescription="Lưu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/txt_giang_vien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="GV: Nguyễn Văn Nam"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txt_ten_khoa_hoc"
            app:layout_constraintBottom_toTopOf="@+id/txt_bo_mon"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_bo_mon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bộ môn: Hệ thống thông tin"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/txt_giang_vien"
            app:layout_constraintBottom_toTopOf="@+id/btn_so_bai_hoc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_so_bai_hoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 bài học"
            android:textColor="@color/blue"
            android:backgroundTint="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
