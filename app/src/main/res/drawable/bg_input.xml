<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền trắng -->
    <solid android:color="#FFFFFF" />

    <!-- Viền màu xanh -->
    <stroke
        android:width="2dp"
        android:color="#007AFF" />

    <!-- Bo góc -->
    <corners android:radius="20dp" />

    <!-- Padding bên trong (tùy chọn, có thể xóa nếu không cần) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
